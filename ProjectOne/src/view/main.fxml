	<ImageView fx:id="imageView" fitHeight="500" fitWidth="500" pickOnBounds="true" preserveRatio="true">
		<image>
			<Image url="/image/a100.png" />
		</image>
	</ImageView>
	<HBox alignment="CENTER">
		<spacing>20</spacing>
	</HBox>
	<HBox prefHeight="100.0" prefWidth="200.0">
		<children>
			<AnchorPane prefHeight="84.0" prefWidth="408.0">
				<children>
					<ImageView fitHeight="100.0" fitWidth="500.0" layoutX="14.0" layoutY="-6.0" pickOnBounds="true" preserveRatio="true">
						<image>
							<Image url="/image/mainButton.png" />
						</image>
					</ImageView>
					<Button fx:id="btnApplicantView" layoutX="172.0" layoutY="25.0" prefHeight="50" prefWidth="150.0" style="-fx-background-color: transparent;">
